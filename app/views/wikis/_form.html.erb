<div class="col-md-8">
  <%= form_for wiki do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control", placeholder: "Enter wiki title" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, rows: 8, class:"form-control", placeholder: "Enter wiki body" %>
    </div>

    <% if current_user.admin? or current_user.premium? %>
      <div class="form-group">
        <%= f.label :private, class: "checkbox" do %>
          <%= f.check_box :private %><small>Check if the Wiki is private.</small>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Save", class:"btn btn-success" %>
    </div>
  <% end %>
</div>
