<% if collaborator = wiki.collaborated(user) %>
  <%= link_to [wiki, collaborator], class: 'btn btn-danger', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Remove Collaborator <%="#{user.email}"%>
  <% end %>
<% else %>
  <%= link_to [wiki, Collaborator.new], class: 'btn btn-primary', method: :post do %>
    <i class="glyphicon glyphicon-star"> </i>&nbsp; Add Collaborator <%="#{user.email}"%>
  <% end %>
<% end %>
