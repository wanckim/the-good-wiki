<% if collaborator = wiki.collaborated(user) %>
  <%= link_to [wiki, user, collaborator], class: 'btn btn-danger', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Remove <u><%="#{user.email}"%></u> from Collaborator
  <% end %>
<% else %>
  <%= link_to [wiki, user, wiki.collaborators.new], class: 'btn btn-primary', method: :post do %>
    <i class="glyphicon glyphicon-star"> </i>&nbsp; Add <u><%="#{user.email}"%></u> to Collaborator
  <% end %>
<% end %>
